@model SCASA.Models.Repositories.Entity.CategoryMaster
@{ 

} 
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="header-icon">
            <i class="fa fa-dashboard"></i>
        </div>
        <div class="header-title">
            <h1>Add Category Type</h1>
            <small>Master Data Management.</small>
        </div>
    </section>
    <!-- Main content -->
    <div class="content">
        <div class="row">
            <!-- Form controls -->
            <div class="col-sm-12">
                <div class="card all_btn_card" id="lobicard-custom-control1" data-sortable="true">
                    <div class="card-header all_card_btn">
                        <div class="row">
                            <div class="card-title custom_title col-sm-6">
                                <h5>Add Category Type</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group float-right" role="group">
                                    <div class="buttonexport" id="buttonlist">
                                        <a class="btn btn-add" href="~/Master/Categories">
                                            <i class="fa fa-reply mr-2"></i>Back
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="~/Master/CategoryType" method="post">
                            @Html.HiddenFor(m=>m.CategoryId)
                            <div class="row">
                                            <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Category Name</label>
                                        @Html.TextBoxFor(m => m.CategoryName,null,new { @placeholder = "Enter Category Name", @class="form-control" })
                                        @Html.ValidationMessageFor(m=>m.CategoryName,null,new { @class="text-danger"})
                                    </div>
                                </div>
                                
                                <div>
                                    <button type="submit" class="btn btn-success serchgaptop"> Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->
</div>