@model IEnumerable<SCASA.Models.ModelClasses.MWorkingDaysDisplay>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int rCnt = 1;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row">
            <div class="col-md-11">
                <div class="header-icon">
                    <i class="fa fa-users"></i>
                </div>
                <div class="header-title">
                    <h1>Monthly working days</h1>
                    <small> List</small>
                </div>
            </div>
        <div class="btn-group float-right" role="group">
            <div class="buttonexport" id="buttonlist">
                <a class="btn btn-add" href="~/EmpireHome/Dashboard">
                    <i class="fa fa-reply mr-2"></i> Back
                </a>
            </div>
        </div>
</div>
    </section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12 pinpin">
            <div class="card" data-sortable="true">
                <div class="card-header">
                    <div class="row">
                        <div class="card-title custom_title col-sm-6">
                            <h4>Monthly working days</h4>
                        </div>
                        <div class="col-sm-6">
                            <div class="btn-group d-flex pull-right">
                                <div class="buttonexport" id="buttonlist">
                                    <a class="btn btn-add" href="~/Master/MonthlyWorkingDaysData">
                                        <i class="fa fa-plus"></i> Add New
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <form action="~/Master/MonthlyWorkingDays" method="post">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Select Year</label>
                                    <select class="form-control" name="YearNumber">
                                        <option>2019 </option>
                                        <option>2020</option>
                                        <option>2021</option>
                                        <option>2022</option>
                                        <option>2023</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Select Month</label>
                                    <select class="form-control" name="MonthNumber">
                                        <option value="1">January </option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 serchgaptop">
                                <button type="submit" class="btn btn-success btn-block"> Search </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="dataTableExample1" class="table table-bordered table-striped table-hover">
                            <thead class="back_table_color">
                                <tr class="info">
                                    <th>S No</th>
                                    <th>Year</th>
                                    <th>Month</th>
                                    <th>Working Days</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model)
                                {
                                    <tr>
                                        <td>@(rCnt++)</td>
                                        <td>@u.YearNumber</td>
                                        <td>@u.MonthName</td>
                                        <td>@u.NumberOfDays</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- customer Modal1 -->
    <!-- /.modal -->
</section>
<!-- /.content -->
</div>