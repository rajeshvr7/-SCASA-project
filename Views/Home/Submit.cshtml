@model SCASA.Models.ModelClasses.UserMasterModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="header-icon">
            <i class="fa fa-dashboard"></i>
        </div>
        <div class="header-title">
            <div class="row">
                <div class="col-md-6">
                    <h1>Submition Form</h1>
                    <small>Submit your Details .</small>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card all_btn_card" id="lobicard-custom-control1" data-sortable="true">
                    <div class="card-header all_card_btn">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card-title custom_title">
                                    <h5>Submition Form</h5>
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="card-body all_card_btn">
                        <!-- Form controls -->
                        <form method="post" enctype="multipart/form-data" action="~/Home/Submit">
                            <div class="col-sm-12">
                                <div class="card all_btn_card" id="lobicard-custom-control1" data-sortable="true">
                                    <div class="card-body">
                                        @Html.HiddenFor(m => m.UserId)
                                        @Html.HiddenFor(m => m.EmployeeCode)
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Employee Name <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Name" name="UserName" value="@Model.UserName" required>
                                                    @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Email ID <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Enter Your Mail" name="EmailId" value="@Model.EmailId" required>
                                                    @Html.ValidationMessageFor(m => m.EmailId, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Mobile Number <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Mobile Number" name="MobileNumber" value="@Model.MobileNumber" required>
                                                    @Html.ValidationMessageFor(m => m.MobileNumber, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Date Of Birth <span class="text-danger">*</span></label>
                                                    @Html.EditorFor(modal => modal.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(m => m.DateOfBirth, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Gender</label>
                                                    <select class="form-control" name="Gender">
                                                        <option value="Male">Male </option>
                                                        <option value="Female">Female</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Address 1 <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Address 1" name="Address1" value="@Model.Address1" required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Address 2</label>
                                                    <input type="text" class="form-control" placeholder="Address 2" name="Address2" value="@Model.Address2">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Country </label>
                                                    @Html.DropDownListFor(x => Model.CountryId, new SelectList(Model.countryDrops, "CountryId", "CountryName", Model.CountryId), new { @id = "cotDD", @class = "form-control", @onChange = "GetStates()", required = "required" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>State </label>
                                                    @Html.DropDownListFor(x => Model.StateId, new SelectList(Model.stateDrops, "StateId", "StateName", Model.StateId), new { @id = "stDD", @class = "form-control", @onChange = "GetCities()", required = "required" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>City</label>
                                                    @Html.DropDownListFor(x => Model.CityId, new SelectList(Model.cityDrops, "CityId", "CityName", Model.CityId), new { @id = "citDD", @class = "form-control", required = "required" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Zip Code <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Zip Code" name="ZipCode" value="@Model.ZipCode" required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Referred By</label>
                                                    <input type="text" class="form-control" placeholder="Referred By" name="ReferredbyName" value="@Model.ReferredbyName">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label> Referred Mobile </label>
                                                    <input type="text" class="form-control" placeholder="Referred Mobile" name="ReferredByMobile" value="@Model.ReferredByMobile">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label> Emergency Contact Number</label>
                                                    <input type="text" class="form-control" placeholder="Emergency Contact Number" name="EmergencyContactNumber" value="@Model.EmergencyContactNumber">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Aadhar Number <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Aadhar Number" name="AadharNumber" value="@Model.AadharNumber" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Pan Number <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Pan Number" name="PANNumber" value="@Model.PANNumber" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Previous Organization Name</label>
                                                    <input type="text" class="form-control" placeholder="Previous Organization Name" name="PreviousOrgName" value="@Model.PreviousOrgName">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Previous Organization Address</label>
                                                    <input type="text" class="form-control" placeholder="Previous Organization Address" name="PreviousOrgAddress" value="@Model.PreviousOrgAddress">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Previous Organization Experience</label>
                                                    <input type="text" class="form-control" placeholder="Previous Organization Experience" name="PreviousOrgExperience" value="@Model.PreviousOrgExperience">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Total experience <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Total Experience" name="TotalPreviousExpeience" value="@Model.TotalPreviousExpeience" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Aadhar File Front<span class="text-danger">*</span></label>
                                                    <input type="file" class="form-control" placeholder=" Update" name="AadharCardUploaded" required />
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Aadhar File Back<span class="text-danger">*</span></label>
                                                    <input type="file" class="form-control" placeholder="Update" name="AadharBackUploaded" required />
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Pan File <span class="text-danger">*</span></label>
                                                    <input type="file" class="form-control" placeholder=" Update" name="PanCardUploaded" required />
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Previous reliving letter</label>
                                                    <input type="file" class="form-control" placeholder=" Update" name="PreviousRelievingLetterUploaded" />
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Resume file <span class="text-danger">*</span></label>
                                                    <input type="file" class="form-control" placeholder=" Update" name="ResumeUploaded" required />
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Salary slip fileFile</label>
                                                    <input type="file" class="form-control" placeholder=" Update" name="SalarySlipUploaded" />
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label> Profile Image upload <span class="text-danger">*</span></label>
                                                    <input type="file" class="form-control" placeholder=" Update" name="ProfileImageUploaded" required />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header all_card_btn">
                                        <h5>Account Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Bank Name <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Bank Name" name="BankName" value="@Model.BankName" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Acc Number <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Acc Number" name="AccountNumber" value="@Model.AccountNumber" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Acc Holder Name <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Acc Holder Name" name="AccountHolderName" value="@Model.AccountHolderName" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Ifsc Code <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Ifsc Code" name="IfscCode" value="@Model.IfscCode" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Branch Address <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="Branch Address" name="BranchAddress" value="@Model.BranchAddress" Required>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>UPI Number <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" placeholder="UPI Number" name="UPINumber" value="@Model.UPINumber" Required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="submit-button">
                                    <button class="btn btn-success" type="submit"> Submit</button>
                                </div>
                            </div>                           
                        </form>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->
</div>
<script>
    function GetStates() {
        var cotid = $('#cotDD option:selected').val();
        $.ajax({
            url: GlobalUrl + "Common/GetAllStates?countryId=" + cotid,
            type: 'post',
            data: '{}',
            success: function (res) {
                var r = res.result.length;
                var row = '';

                if (r > 0) {
                    for (var i = 0; i < r; i++) {
                        row = row + '<option value="' + res.result[i].stateId + '">' + res.result[i].stateName + '</option>';
                    }
                }
                $('#stDD').html('');
                $('#stDD').html(row);
            }
        });
    }
    function GetCities() {
        var sid = $('#stDD option:selected').val();
        $.ajax({
            url: GlobalUrl + "Common/GetAllCities?stateId=" + sid,
            type: 'post',
            data: '{}',
            success: function (res) {
                var r = res.result.length;
                var row = '';

                if (r > 0) {

                    for (var i = 0; i < r; i++) {
                        row = row + '<option value="' + res.result[i].cityId + '">' + res.result[i].cityName + '</option>';
                    }
                }
                $('#citDD').html('');
                $('#citDD').html(row);
            }
        });
    }
</script>