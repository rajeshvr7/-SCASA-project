                        </div>

                        <div class="row">
                            <div class="col-3">
                                <div class="table-responsive mt-2">
                                    <table id="" class="table table-bordered table-striped table-hover" width="400">
                                        <tbody>
                                            <tr>
                                                <td width="50%"> <a href="#" class="btn btn-success">Download to excel</a></td>
                                                <td> <a href="#" class="btn btn-primary">Export to PDF</a></td>

                                            </tr>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


             

        </div>
    </section>
    <!-- /.content -->
</div>
