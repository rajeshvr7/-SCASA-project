@model IEnumerable<SCASA.Models.ModelClasses.CustomerAddressModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int rCnt = 1;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row">
            <div class="col-md-11">
                <div class="header-icon">
                    <i class="fa fa-dashboard"></i>
                </div>
                <div class="header-title">
                    <h1>Addresses</h1>
                    <small></small>
                </div>
            </div>
            <div class="btn-group float-right" role="group">
                <div class="buttonexport" id="buttonlist">
                    <a class="btn btn-add" href="~/User/CustomerList">
                        <i class="fa fa-reply mr-2"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-12 pinpin">
                <div class="card" data-sortable="true">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card-title custom_title">
                                    <h4>Address</h4>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group float-right" role="group">
                                    <div class="buttonexport" id="buttonlist">
                                        <a class="btn btn-add" href="~/User/AddressData?cid=@ViewBag.cusId">
                                            <i class="fa fa-plus"></i> Add New
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body">
                                      
                        <div class="table-responsive">
                            <table id="mydatatable" class="table table-bordered table-striped table-hover">
                                <thead class="back_table_color">
                                    <tr class="info">
                                        <th>S No</th>
                                        <th>HNO</th>
                                        <th>Street Name</th>
                                        <th>Location</th>
                                        <th>Address</th>
                                        <th>Address Type</th> 
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var u in Model)
                                    {
                                        <tr>
                                            <td>@(rCnt ++)</td>
                                            <td>@u.HouseNumber</td>
                                            <td>@u.StreetName</td>
                                            <td>@u.Location</td>
                                            <td>@u.CityName, @u.StateName, @u.CountryName</td>
                                            <td>@u.AddressType</td>

                                            <td>
                                                <a href="~/User/AddressData?id=@u.Addid" title="Edit">
                                                    <button type="button" class="btn btn-add btn-sm">
                                                        <i class="fa fa-pencil"></i>
                                                    </button>
                                                </a>
                                               
                                                <a href="javascript:void(0);" title="Delete" onclick="ShowDelete(@u.Cid)">
                                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal">
                                                        <i class="fa fa-trash-o"></i>
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
